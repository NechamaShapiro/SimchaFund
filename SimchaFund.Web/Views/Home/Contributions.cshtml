<div class="header">
    <h1>
        Contributors for the
        Bris simcha
    </h1>
</div>
<div class="table-responsive">
    <form method="POST" action="/simchas/updatecontributions">
        <input type="hidden" name="simchaId" value="3044" />
        <table class="table table-bordered table-striped">
            <tr>
                <th>Contribute</th>
                <th>Name</th>
                <th>Balance</th>
                <th>Always Include</th>
                <th>Amount</th>
            </tr>
            <input type="hidden" name="contributors[0].ContributorId" value="1003" />
            <tr>
                <td>
                    <div class="d-flex justify-content-center">
                        <div class="form-check form-switch">
                            <input style="width: 4rem; height: 2rem;" name="contributors[0].Include" class="form-check-input" type="checkbox" checked value="true">
                        </div>
                    </div>
                </td>
                <td>Friedman Mattie</td>
                <td>$3,846.00</td>
                <td style="text-align: center;">
                    <i style="font-size:30px" class="bi bi-check"></i>
                </td>
                <td>
                    <input type="text" name="contributors[0].amount" class="form-control" value="5.0000" />
                </td>
            </tr>
            <input type="hidden" name="contributors[1].ContributorId" value="1004" />
            <tr>
                <td>
                    <div class="d-flex justify-content-center">
                        <div class="form-check form-switch">
                            <input style="width: 4rem; height: 2rem;" name="contributors[1].Include" class="form-check-input" type="checkbox" value="true">
                        </div>
                    </div>
                </td>
                <td>Doe John</td>
                <td>$101.32</td>
                <td style="text-align: center;">
                </td>
                <td>
                    <input type="text" name="contributors[1].amount" class="form-control" value="5" />
                </td>
            </tr>
            <input type="hidden" name="contributors[2].ContributorId" value="1005" />
            <tr>
                <td>
                    <div class="d-flex justify-content-center">
                        <div class="form-check form-switch">
                            <input style="width: 4rem; height: 2rem;" name="contributors[2].Include" class="form-check-input" type="checkbox" value="true">
                        </div>
                    </div>
                </td>
                <td>Mouse Minnie</td>
                <td>$1,200.00</td>
                <td style="text-align: center;">
                </td>
                <td>
                    <input type="text" name="contributors[2].amount" class="form-control" value="5" />
                </td>
            </tr>
            
        </table>
        <div style="text-align:center;">
            <button class="btn-lg btn-danger">Update</button>
        </div>
    </form>
</div>
